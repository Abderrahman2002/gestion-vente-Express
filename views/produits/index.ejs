<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des Produits</h1>
    <a href="/produits/ajouter" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un produit
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Marque</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% produits.forEach(produit => { %>
                    <tr>
                        <td><%= produit.nom %></td>
                        <td><%= produit.marque %></td>
                        <td><%= produit.prix.toFixed(2) %> â‚¬</td>
                        <td>
                            <span class="badge bg-<%= produit.qtestock < 10 ? 'danger' : 'success' %>">
                                <%= produit.qtestock %>
                            </span>
                        </td>
                        <td>
                            <a href="/produits/<%= produit._id %>" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/produits/<%= produit._id %>/modifier" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>